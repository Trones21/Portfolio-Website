@model MyStuff.ViewModels.AllProjectsViewModel
@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="row grey darken-3">
    <div class="container white-text">
        <div class="col s6 left valign-wrapper">
            <h4>My Projects</h4>
        </div>        
    </div>
</div>
<div class="container">
    <div class="row">

        @foreach (var project in Model.Projects)
        {
            <div class="card col s12 m6 l3 black">
                <div class="section">
                    @{
                        switch (project.WorkorSideProject)
                        {
                            case MyStuff.Models.WorkorSideProject.SideProject:
                                <span class="new badge blue lighten-1" data-badge-caption=@project.WorkorSideProject></span>
                                break;
                            case MyStuff.Models.WorkorSideProject.Work:
                                <span class="new badge purple lighten-1" data-badge-caption=@project.WorkorSideProject></span>
                                break;
                        }
                    }
                    @{
                        switch (project.ProgressStatus)
                        {
                            case MyStuff.Models.ProgressStatus.Idea:
                                <span class="new badge yellow darken-1 black-text" data-badge-caption="@project.ProgressStatus"></span>
                                break;
                            case MyStuff.Models.ProgressStatus.Inactive:
                                <span class="new badge grey darken-1" data-badge-caption="@project.ProgressStatus"></span>
                                break;
                            case MyStuff.Models.ProgressStatus.InProgress:
                                <span class="new badge light-green darken-1" data-badge-caption="@project.ProgressStatus"></span>
                                break;
                            case MyStuff.Models.ProgressStatus.Complete:
                                <span class="new badge green darken-1" data-badge-caption="@project.ProgressStatus"></span>
                                break;
                        }
                    }
                </div>
                <div class="section">
                    <a href="~/Projects/Project?id=@project.Id">
                        @{ if (project.ImgURI != null)
                            {
                                <img class="responsive-img" src="@project.ImgURI" alt="@project.Title">
                            }
                            else
                            {
                                <img class="responsive-img" src="img/project-thumb.png" alt="@project.Title">
                            }
                        }
                        <div class="card-content">
                            <span class="card-title white-text">@project.Title</span>
                        </div>
                    </a>
                    <div class="row">
                        <div class="card-action activator col s6" style="text-align:center">
                            <a class="activator">Summary</a>
                        </div>
                        <div class="card-action col s6" style="text-align:center">
                            <a href="~/Projects/Project?id=@project.Id">Details</a>
                        </div>
                    </div>
                </div>
                <div class="card-reveal blue-grey darken-3">
                    <span class="card-title activator white-text">Summary<i class="material-icons right">close</i></span>
                    <p class="activator white-text">@project.ShortDescription</p>
                </div>
            </div>
        }
    </div>
</div>





